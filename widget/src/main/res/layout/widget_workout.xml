<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header with navigation -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/training_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_no_training"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/widget_off_white"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Navigation arrows container -->
        <LinearLayout
            android:id="@+id/navigation_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_previous"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="4dp"
                android:text="@string/widget_btn_prev"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_off_white"
                android:gravity="center"
                android:background="@drawable/navigation_button_background"
                android:clickable="true" />

            <TextView
                android:id="@+id/btn_next"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@string/widget_btn_next"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_off_white"
                android:gravity="center"
                android:background="@drawable/navigation_button_background"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Empty state container -->
    <FrameLayout
        android:id="@+id/empty_state_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/widget_no_training"
            android:textSize="14sp"
            android:textColor="@color/widget_off_white"
            android:gravity="center" />
    </FrameLayout>

    <!-- Workout content container -->
    <LinearLayout
        android:id="@+id/workout_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Card info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:background="@drawable/card_info_background"
            android:padding="12dp">

            <TextView
                android:id="@+id/card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_fitness_red"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/widget_off_white"
                android:ellipsize="end"
                android:maxLines="4" />
        </LinearLayout>

        <!-- Timer display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/timer_display_background"
            android:padding="16dp">

            <Chronometer
                android:id="@+id/timer_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="@color/widget_off_white"
                android:gravity="center" />

            <TextView
                android:id="@+id/timer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/widget_timer_running"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/widget_fitness_red"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Timer buttons container -->
        <LinearLayout
            android:id="@+id/timer_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Timer selection chips (visible when not running) -->
            <LinearLayout
                android:id="@+id/timer_chips_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/chip_timer_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_off_white"
                    android:background="@drawable/timer_chip_background"
                    android:clickable="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chip_timer_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_off_white"
                    android:background="@drawable/timer_chip_background"
                    android:clickable="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chip_timer_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_off_white"
                    android:background="@drawable/timer_chip_background"
                    android:clickable="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chip_timer_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_off_white"
                    android:background="@drawable/timer_chip_background"
                    android:clickable="true"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Control buttons -->
            <LinearLayout
                android:id="@+id/control_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/widget_btn_start"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_off_white"
                    android:background="@drawable/start_button_background"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/btn_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/widget_btn_pause"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_off_white"
                    android:background="@drawable/pause_button_background"
                    android:clickable="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btn_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/widget_btn_reset"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_off_white"
                    android:background="@drawable/reset_button_background"
                    android:clickable="true"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
